<div class= "madera">
<div class="row" >
</div>



  <div class="row">
    <div class="row">
    </div>
      <div class="row">
      <div class="large-6 columns"></div>
    </div>

        <div class="submit_beer-title">
          <h3>Submit a New Beer</h3></div>
          <div class="row">
          </div>

        <div class="card">

    <%= form_for [@beer] do |f| %>
        <% if @beer.errors.present? %>
    <div id="error_explanation">
      <h2><%= pluralize(@beer.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @beer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class='field'>
    <%= f.label :description , "When did you try it?"%>
    <%= f.text_field :description %>
  </div>

  <div class='field'>
    <%= f.label :brewery %>
    <%= f.text_field :brewery %>
  </div>

  <div class='field'>
    <%= f.label :style %>
    <%= f.text_field :style %>
  </div>

  <div class='field'>
    <%= f.label :url, "Image URL" %>
    <%= f.text_field :url%>
  </div>

  <div class='field'>
    <%= f.submit value="Add this Beer to the List" %>
  </div>
</div>

<% end %>


<div class="beer_list_header">
  <h3>List of Reviewed Beers</h3>
<div class="cartota">
<div class="large-12 columns">

  <% @beers.each do |beer| %>
  <a href="beers/<%=beer.id%>"><img src="<%=beer.url%>" width=450 height=450 /></a>

  <% end %>
</div>
</div>
</div>
